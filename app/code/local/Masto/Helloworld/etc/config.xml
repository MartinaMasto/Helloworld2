<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <modules>
        <Masto_Helloworld>
            <version>0.1.0</version>
        </Masto_Helloworld>
    </modules>
    <global>
        <helpers>
            <masto_helloworld>
                <class>Masto_Helloworld_Helper</class>
            </masto_helloworld>
        </helpers>
        <blocks>
            <masto_helloworld>
                <class>Masto_Helloworld_Block</class>
            </masto_helloworld>
        </blocks>
    </global>
    <frontend>
        <routers>
            <helloworld>
                <use>standard</use>
                <args>
                    <module>Masto_Helloworld</module>
                    <frontName>helloworld</frontName>
                </args>
            </helloworld>
        </routers>
        <layout>
            <update>
                <masto_helloworld>
                    <file>masto_helloworld.xml</file>
                </masto_helloworld>
            </update>
        </layout>
    </frontend>
    <default>
        <masto_helloworld>
            <configuration>
                <enabled>0</enabled>
                <message>Welcome!</message>
            </configuration>
        </masto_helloworld>
    </default>
</config>